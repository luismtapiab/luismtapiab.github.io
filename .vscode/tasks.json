{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "bundle jekyll build"
        },
        {
            "label": "serve",
            "type": "shell",
            "command": "bundle jekyll serve",
            "args": [
                "--incremental"
            ],
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
    ]
}